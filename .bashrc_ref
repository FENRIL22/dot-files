function lsdev(){
	(cd ~/dev;ls)
}

function cddev(){
if [ ${#} -ne 0 ]; then
	echo "cd $1"
	cd ~/dev/$1
else
	echo "default cd: dev"
	cd ~/dev
fi	
}

function envreload(){
	(cd ~; source .bashrc)
}


function findbigfile(){
	du -ma | sort -rn | head -100
}

#pyenv setting
function setpyenv() {
	export PATH="$PYENV_ROOT/bin:$PATH"
	export PYENV_ROOT="$HOME/.pyenv"
	eval "$(pyenv init -)"
}

